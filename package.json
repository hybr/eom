{
  "name": "entity-oriented-microservices",
  "version": "1.0.0",
  "description": "Entity-based website with auto-generated CRUD and microservices architecture",
  "main": "src/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon src/gateway/server.js",
    "dev:frontend": "vite --config frontend/vite.config.js",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "echo 'Backend build complete'",
    "build:frontend": "vite build --config frontend/vite.config.js",
    "start": "node src/gateway/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ frontend/src/ --ext .js,.json",
    "lint:fix": "eslint src/ frontend/src/ --ext .js,.json --fix",
    "generate:entity": "node scripts/generate-entity.js",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/migrate.js --rollback",
    "seed": "node scripts/seed.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docs:serve": "http-server docs/ -p 8080"
  },
  "keywords": [
    "entity",
    "microservices",
    "crud",
    "websockets",
    "sqlite",
    "express",
    "bootstrap"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.8",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "vite": "^7.1.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
